                                        </h1>
                                        <p class="model-description">
                                            <%= surfboard.description %>
                                        </p>
                                        <h3 class="model-lenght">
                                            <%= surfboard.length %>
                                        </h3>
                                        <% if(User) {%>
                                            <form action="/surfboards/<%= surfboard._id %>/edit">
                                                <button type="submit" class="btn btn-outline-warning">Edit</button>
                                            </form>
                                            <% } %>
                                                <% } %>

                                                    <% } %>
                            </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- LONGBOARD MODELSECTION-->
